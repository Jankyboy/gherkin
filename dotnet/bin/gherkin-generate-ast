#!/usr/bin/env bash
DIR=$( cd "$( dirname "$4" )" && pwd )

starter=""
binary=""

if [ $1 = "net45" ]; then
    starter="mono"
    binary="exe"
else
    if [ $1 = "netcoreapp1.0" ]; then
        starter="dotnet"
        binary="dll"    
    fi
fi

$starter output/$1/Gherkin.CLI.$binary ${@:2}

exit 0